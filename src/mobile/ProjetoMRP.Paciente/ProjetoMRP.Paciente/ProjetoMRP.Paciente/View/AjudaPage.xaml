<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoMRP.Paciente.View.AjudaPage"
             Title="Ajuda">
    <ContentPage.Content>
            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" HorizontalOptions="Center" Padding="60">
                <Button WidthRequest="250" HeightRequest="70" class="ajuda" x:Name="btnAjuda" Text="Telefone prioritário de ajuda XXXXXXXXXXXXX"></Button>
            <Label x:Name="lblAjuda" Text="Para outros casos de urgência ou na impossibilidade de contato, utilize" 
                   Margin="0,50,0,0" FontSize="Medium" HeightRequest="120" WidthRequest="350" HorizontalTextAlignment="center"
                   FontAttributes="Bold" HorizontalOptions="Center"></Label>
            <Button Margin="0,0,0,0" WidthRequest="250" HeightRequest="70" class="ajuda" x:Name="btnSNS" Text="SNS24"></Button>
            <Button Margin="0,30,0,0" WidthRequest="250" HeightRequest="70" class="ajuda" x:Name="btn112" Text="112 - Emergencia Médica"></Button>
        </StackLayout>
        </ContentPage.Content>

</ContentPage>