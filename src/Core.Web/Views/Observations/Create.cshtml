@model SummaryClinicalDetailViewModel

<form asp-action="Create" asp-controller="Observations" id="form-id-observation">
    <div class="card-body col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.Observation.PatientId)
        @Html.HiddenFor(model => model.CloneId, new { @id = "cloneId_observation" })
        <input type="hidden" asp-for="Facilitator.TypeClinicalSummary" value="Observation">
        <div class="form-group">
            <label asp-for="Observation.ClinicalSummaryFacilitator" class="control-label"></label>
            <select class="form-control" asp-for="Observation.ClinicalSummaryFacilitator" asp-items="ViewBag.SelectListFacilitatorObservation">
                <option value="">-- @LocalizerGeneral["Selecione"] --</option>
            </select>
        </div>
        <div class="form-group">
            <div class="custom-control custom-switch">
                <input type="checkbox" asp-for="IsNewFacilitator" class="custom-control-input" id="isnewfacilitator_observation">
                <label class="custom-control-label" for="isnewfacilitator_observation">@Localizer["Você quer guardar as informacoes como facilitador de preenchimento?"]</label>
            </div>
        </div>
        <div id="facilitator-pathology-observation" class="form-group">
            <label asp-for="Facilitator.PathologyId" class="control-label"></label>
            <select class="form-control" asp-for="Facilitator.PathologyId" asp-items="ViewBag.SelectListPathologies">
                <option value="">-- @LocalizerGeneral["Selecione"] --</option>
            </select>
        </div>
        <div id="facilitator-name-observation" class="form-group">
            <label asp-for="Facilitator.Name" class="control-label"></label>
            <input asp-for="Facilitator.Name" class="form-control" />
            <span asp-validation-for="Facilitator.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Observation.Description" class="control-label"></label>
            <textarea asp-for="Observation.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Observation.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="card-footer">
        <partial name="../Shared/Components/Toolbars/_BtnSaveCancelSummaryClinical.cshtml" />
    </div>
</form>