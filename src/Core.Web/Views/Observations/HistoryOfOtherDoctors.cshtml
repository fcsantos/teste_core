@model SummaryClinicalDetailViewModel

<div class="card">
    <div class="card-body">
        @if (Model.ObservationsExcept.Any())
        {
            <table id="table-observation-history-others" class="table table-striped table-bordered display">
                <thead>
                    <tr>
                        <th>@Localizer["Data"]</th>
                        <th>@Localizer["Descrição"]</th>
                        <th>@Localizer["Médico"]</th>
                        <th>@Localizer["Ativo"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var observation in Model.ObservationsExcept)
                    {
                        <tr>
                            <td width="15%">@observation.DateFormat</td>
                            <td width="40%">@(observation.Description.Count() > 50 ? string.Concat(observation.Description.Substring(0, 50), "...") : observation.Description)</td>
                            <td width="20%">@observation.DoctorName</td>
                            <td width="10%" class="text-center py-0 align-middle"><span class="@((observation.IsActive.Value) ? "badge badge-success" : "badge badge-danger")">@observation.Ativo</span></td>
                            <td width="15%" class="text-center py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn bg-blue" id="viewmore-observation-others" data-id="@observation.Id" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Ver mais"]"><i class="fas fa-plus"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Localizer["Não existe Observação cadastrado"]</p>
        }
    </div>
</div>