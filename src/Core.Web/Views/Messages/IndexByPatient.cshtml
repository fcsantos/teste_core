@model SummaryClinicalDetailViewModel

<div class="card">
    <div class="card-body">
        @if (Model.Messages.Any())
        {
            <table id="table-message" class="table table-striped table-bordered display">
                <thead>
                    <tr>
                        <th>@Localizer["Data"]</th>
                        <th>@Localizer["Mensagem"]</th>
                        <th>@Localizer["Estado"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model.Messages)
                    {
                        <tr>
                            <td width="10%">@message.DateFormat</td>
                            <td width="55%">@(message.Text.Count() > 50 ? string.Concat(message.Text.Substring(0, 50), "...") : message.Text)</td>
                            <td width="15%">@message.StatusMessageFormat</td>
                            <td width="20%" class="text-center py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    @{
                                        <a class="btn bg-blue viewmore-msg" onclick="viewMore(this);" data-id="@message.Id" data-status="@message.StatusMessage" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Ver mais"]">  <i class="fas fa-plus"></i> </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Localizer["Não existe Mensagem cadastrada."]</p>
        }
    </div>
</div>