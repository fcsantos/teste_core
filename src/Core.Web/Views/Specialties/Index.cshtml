@model IEnumerable<SpecialtyViewModel>

@{
    ViewData["Title"] = Localizer["Especialidade"];
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<a asp-controller="Specialties" asp-action="Create" class="btn btn-primary float-md-right"> @Localizer["Criar Novo Especialidade"] <i class="fa fa-chevron-right"></i></a>
<br />
<br />
<br />
<br />
<section class="padding-y">
        @if (Model.Any())
        {
            <table id="table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Localizer["Grupo"]</th>
                        <th>@Localizer["Especialidade"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var specialty in Model)
                    {
                        <tr>
                            <td>@(specialty.ParentName == null ? specialty.Name : specialty.ParentName)</td>
                            <td>@specialty.Name</td>
                            <td class="text-center py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn bg-blue" asp-controller="Specialties" asp-action="Edit" asp-route-id="@specialty.Id" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Editar"]"><i class="fas fa-edit"></i></a>
                                    &nbsp&nbsp<button id="Delete" value="Specialties" name="@specialty.Id" class="btn bg-danger" type="button" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Deletar"]"><i class="far fa-trash-alt"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Localizer["Não existe Especialidade cadastrado"]</p>
        }
</section>