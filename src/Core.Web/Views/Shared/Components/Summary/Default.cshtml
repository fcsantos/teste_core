@{
    if (TempData["Erros"] is IEnumerable<string> messageError && messageError.Any())
    {
        <div style="padding-top: 15px;"></div>

        <div class="alert alert-danger alert-dismissible">

            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3 id="msgRetorno" style="padding-top: 20px">@LocalizerGeneral["Opa! Algo deu errado"]</h3>

            <ul>
                @{
                    foreach (var erro in messageError)
                    {
                        <li>@LocalizerGeneral[erro]</li>
                    }
                }

            </ul>
        </div>
    }
}