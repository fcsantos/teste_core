<script>
    $(document).ready(function () {
        var noticeId = $("#Id").val();
        var url = "/Notices/GetListPatients?noticeId=" + noticeId;
        $.getJSON(url, function (data) {
            var item = "";
            $("#select2").empty();
            $.each(data, function (i, action) {
                if (action.value != noticeId) {
                    item += '<option value="' + action.value + '" ' + ((action.selected) ? 'selected ' : '') + '>' + action.text + '</option>';
                }
            });

            $("#select2").html(item);
        });

        $("#select2").prop('disabled', $('#chkSendAll').is(":checked"));
    });

    $("#chkSendAll").change(function () {
        $("#select2").prop('disabled', $('#chkSendAll').is(":checked"));
    });

    //Initialize Select2 Elements
    $("#select2").select2();

</script>