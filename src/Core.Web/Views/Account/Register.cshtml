@model UserRegister

@{
    ViewData["Title"] = LocalizerGeneral["Registro de novo utilizador"];
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<section class="section-conten padding-y container" style="min-height: 35vh">


    <div class="card mx-auto" style="max-width: 380px;">

        <div class="card-body">
            <div class="row"><h4 class="card-title mb-4">@LocalizerGeneral["Seja bem vindo!"]</h4></div>

            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="form-id">

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Role"></label>
                    <select asp-for="Role" class="form-control" asp-items="ViewBag.SelectListRoles">
                        <option value="">-- @LocalizerGeneral["Selecione Perfil"] --</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">@LocalizerGeneral["Registrar"]</button>
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
