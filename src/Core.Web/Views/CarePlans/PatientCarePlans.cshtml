@model IEnumerable<CarePlanViewModel>

@{
    ViewData["Title"] = Localizer["Plano de Cuidados"];
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<section class="padding-y">
    @if (Model.Any())
    {
        <table id="table" class="table table-striped table-bordered display">
            <thead>
                <tr>
                    <th>@Localizer["Data"]</th>
                    <th>@Localizer["Médico"]</th>
                    <th>@Localizer["Título"]</th>
                    <th>@Localizer["Descrição"]</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var careplan in Model)
                {
                    <tr>
                        <td width="15%">@careplan.DateFormat</td>
                        <td width="15%">@careplan.DoctorName</td>
                        <td width="25%">@careplan.Title</td>
                        <td width="35%">@(careplan.Description.Count() > 50 ? string.Concat(careplan.Description.Substring(0, 50), "...") : careplan.Description)</td>
                        <td width="10%" class="text-center py-0 align-middle">
                            <div class="btn-group btn-group-sm">
                                <a class="btn bg-blue" id="viewmore-careplan" data-id="@careplan.Id"><i class="fas fa-plus"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>@Localizer["Não existe Plano de Cuidados cadastrada"]</p>
    }
</section>

