@model SummaryClinicalDetailViewModel

<div class="card">
    <div class="card-body">
        @if (Model.CarePlansExcept.Any())
        {
            <table id="table-careplan-history-others" class="table table-striped table-bordered display">
                <thead>
                    <tr>
                        <th>@Localizer["Data"]</th>
                        <th>@Localizer["Título"]</th>
                        <th>@Localizer["Descrição"]</th>
                        <th>@Localizer["Médico"]</th>
                        <th>@Localizer["Ativo"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var careplan in Model.CarePlansExcept)
                    {
                        <tr>
                            <td width="15%">@careplan.DateFormat</td>
                            <td width="15%">@careplan.Title</td>
                            <td width="40%">@(careplan.Description.Count() > 50 ? string.Concat(careplan.Description.Substring(0, 50), "...") : careplan.Description)</td>
                            <td width="15%">@careplan.DoctorName</td>
                            <td width="10%" class="text-center py-0 align-middle"><span class="@((careplan.IsActive.Value) ? "badge badge-success" : "badge badge-danger")">@careplan.Ativo</span></td>
                            <td width="5%" class="text-center py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn bg-blue" id="viewmore-careplan-others" data-id="@careplan.Id" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Ver mais"]"><i class="fas fa-plus"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Localizer["Não existe Plano de Cuidados cadastrada"]</p>
        }
    </div>
</div>