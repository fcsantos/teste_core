@model SummaryClinicalDetailViewModel

<div class="card">
    <div class="card-body">
        @if (Model.Consultations.Any())
        {
            <table id="table-consultation" class="table table-striped table-bordered display">
                <thead>
                    <tr>
                        <th>@Localizer["Data"]</th>
                        <th>@Localizer["Descrição"]</th>
                        <th>@Localizer["Ativo"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var consultation in Model.Consultations)
                    {
                        <tr>
                            <td width="25%">@consultation.DateFormat</td>
                            <td width="45%">@(consultation.Description.Count() > 50 ? string.Concat(consultation.Description.Substring(0, 50), "...") : consultation.Description)</td>
                            <td width="10%" class="text-center py-0 align-middle"><span class="@((consultation.IsActive.Value) ? "badge badge-success" : "badge badge-danger")">@consultation.Ativo</span></td>
                            <td width="20%" class="text-center py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn bg-blue" id="viewmore-consultation" data-id="@consultation.Id" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Ver mais"]"><i class="fas fa-plus"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Localizer["Não existe Consulta cadastrada"]</p>
        }
    </div>
</div>