@model IEnumerable<FornecedorViewModel>

@{
    ViewData["Title"] = Localizer["Fornecedores"];

    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<a asp-controller="Fornecedores" asp-action="Create" class="btn btn-primary float-md-right"> @Localizer["Criar Novo Fornecedor"] <i class="fa fa-chevron-right"></i></a>
<br />
<br />
<br />
<br />
<section class="padding-y">
    <div id="event" class="container">
        @if (Model.Any())
        {
            <table id="table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>@Localizer["Nome"]</th>
                        <th>@Localizer["Documento"]</th>
                        <th>@Localizer["Ativo"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fornecedor in Model)
                    {
                        <tr>
                            <td>@fornecedor.Id.ToString()</td>
                            <td>@fornecedor.Nome</td>
                            <td>@fornecedor.Documento</td>
                            <td>@fornecedor.Ativo</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Fornecedores" asp-action="Edit" asp-route-id="@fornecedor.Id">@LocalizerGeneral["Editar"]</a> |
                                <button id="Delete" value="Fornecedores" name="@fornecedor.Id" class="btn btn-danger" type="button" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Deletar"]">@LocalizerGeneral["Deletar"]</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Localizer["Não existe Fornecedor cadastrado"]</p>
        }
    </div>
</section>