@model PathologyViewModel

@{
    ViewData["Title"] = ViewBag.EditPathologyName;
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<hr />
<div class="card card-default">
    <form asp-action="EditPost" id="form-id">
        <div class="card-body col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentPathologyId" class="control-label"></label>
                <select class="form-control" asp-for="ParentPathologyId" asp-items="ViewBag.SelectListParentPathologies">
                    <option value="">-- @Localizer["Selecione Patologia"] --</option>
                </select>
            </div>
        </div>
        <div class="card-footer">
            <partial name="../Shared/Components/Toolbars/_BtnSaveCancel.cshtml" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
