@model SummaryClinicalDetailViewModel

<div class="card">
    <div class="card-body">
        @if (Model.DiagnosticsExcept.Any())
        {
            <table id="table-diagnostic-history-others" class="table table-striped table-bordered display">
                <thead>
                    <tr>
                        <th>@Localizer["Data"]</th>
                        <th>@Localizer["Descrição"]</th>
                        <th>@Localizer["Médico"]</th>
                        <th>@Localizer["Ativo"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var diagnostic in Model.DiagnosticsExcept)
                    {
                        <tr>
                            <td width="15%">@diagnostic.DateFormat</td>
                            <td width="40%">@(diagnostic.Description.Count() > 50 ? string.Concat(diagnostic.Description.Substring(0, 50), "...") : diagnostic.Description)</td>
                            <td width="20%">@diagnostic.DoctorName</td>
                            <td width="10%" class="text-center py-0 align-middle"><span class="@((diagnostic.IsActive.Value) ? "badge badge-success" : "badge badge-danger")">@diagnostic.Ativo</span></td>
                            <td width="15%" class="text-center py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn bg-blue" id="viewmore-diagnostic-others" data-id="@diagnostic.Id" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Ver mais"]"><i class="fas fa-plus"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Localizer["Não existe Diagnostico cadastrado"]</p>
        }
    </div>
</div>