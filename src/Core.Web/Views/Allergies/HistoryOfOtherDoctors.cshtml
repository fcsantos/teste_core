@model SummaryClinicalDetailViewModel

<div class="card">
    <div class="card-body">
        @if (Model.AllergiesExcept.Any())
        {
            <table id="table-allergy-history-others" class="table table-striped table-bordered display">
                <thead>
                    <tr>
                        <th>@Localizer["Data"]</th>
                        <th>@Localizer["Descrição"]</th>
                        <th>@Localizer["Médico"]</th>
                        <th>@Localizer["Ativo"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var allergy in Model.AllergiesExcept)
                    {
                        <tr>
                            <td width="15%">@allergy.DateFormat</td>
                            <td width="40%">@(allergy.Description.Count() > 50 ? string.Concat(allergy.Description.Substring(0, 50), "...") : allergy.Description)</td>
                            <td width="20%">@allergy.DoctorName</td>
                            <td width="10%" class="text-center py-0 align-middle"><span class="@((allergy.IsActive.Value) ? "badge badge-success" : "badge badge-danger")">@allergy.Ativo</span></td>
                            <td width="15%" class="text-center py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn bg-blue" id="viewmore-allergy-others" data-id="@allergy.Id" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Ver mais"]"><i class="fas fa-plus"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>@Localizer["Não existe Alergia cadastrada"]</p>
        }
    </div>
</div>